<h1>Courses</h1>

{{#if courses.length}} <!--Проверка длинны массива курсов-->
    {{#each courses}} <!--Итерация массива forEach в сигнатуре handlebars-->
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-image">
                        <img src={{image}} alt={{title}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price" class="primary">{{price}}</p>
                    </div>
                    <div class="card-action">
                        <div class="course-navigation">
                            <a href="/courses/{{id}}" target="_blank">Open course</a>
                            <a href="/courses/{{id}}/edit?allow=true">Edit course</a>
                            <form action="/cart/add" method="POST">
                                <input type="hidden" name='id' value={{id}}>
                                <button type="submit" class="btn btn-primary">Add to cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>There is no courses</p>
{{/if}}