<h1>Edit {{title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input placeholder="Course name" name="title" id="title" type="text" class="validate" required value={{title}}>
        <label for="title">Enter course name</label>
        <span class="helper-text" data-error="Enter course name">Helper text</span>
    </div>
    <!--Что бы получать данные из формы, в каждый инпут нужно добавить атрибут name -->
    <div class="input-field">
        <input placeholder="Course price" name="price" id="price" type="number" class="validate" required min="1" value={{price}}>
        <label for="price">Enter course price</label>
        <span class="helper-text" data-error="Enter course price">Helper text</span>
    </div>

    <div class="input-field">
        <input placeholder="Image" id="img" name="image" type="text" class="validate" required value={{image}}>
        <label for="img">Enter URL img</label>
        <span class="helper-text" data-error="Enter img URL">Helper text</span>
    </div>
    <input type="hidden" name="id" value={{id}}>
    <button class="btn btn-primary">Edit course</button>
</form>